<div class="left">
    <a class="logo logo-knowledge" href="{{ site.url }}/index.html"><img src="{{ site.url }}/_/img/plentyKnowledge_RGB.svg" alt="home-logo"></a>
</div>

<div class="right">
    <div class="menu-wrapper">
        <a class="menu-item" href="{{ i18n page.attributes.lang 'plentymarkets_demo_system_link' }}" target="_blank">{{ i18n page.attributes.lang 'plentymarkets_demo_system' }}</a>
        <a class="menu-item" href="https://developers.plentymarkets.com/" target="_blank">{{ i18n page.attributes.lang 'developers_documentation' }}</a>
        <div class="dropdown menu-item">
            <i class="fa-pif-language"></i>
            <button class="dropdown-toggle"
                    id="langToggle"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false">EN
            </button>
            <div class="dropdown-menu submenu-item"
                aria-labelledby="langToggle">
            <a id="languagePath"><span id="langSelect" class="submenu-item">DE</span></a>
            </div>
        </div>
    </div>
</div>
<div id="searchbar" class="searchbar d-none">
  {{#if (eq site.url 'http://localhost:5252')}}
    <form action="search.html">
  {{else}}
    <form action="{{ site.url }}/{{ page.component.name }}/{{ page.version }}/search.html">
  {{/if}}
    <div class="input-group">
      <input class="search-input" id="search-input" type="text" name="query" placeholder="{{ i18n page.attributes.lang 'search_placeholder_text' }}" autocomplete="off" autofocus>
      <div class="input-group-append">
      <button class="searchSubmitButton" type="submit">
        <i class="fa fa-search"></i>
      </button>
      </div>
    </div>
    <div id="search-results"></div>
  </form>
</div>
